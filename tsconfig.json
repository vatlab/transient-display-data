{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "outDir": "lib",
    "rootDir": "src",
    "types": []
  },
  "include": ["src/*"]
}
